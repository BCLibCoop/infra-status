  <div class="col-lg-4">
    <h3>Developer Resources</h3>
    <ul class="list-group">
      <li class="list-group-item">
        <%= service_info 'dgo_ssh' %>
        <tt>dev.gentoo.org</tt> Shell Access
      </li>
      <li class="list-group-item">
        <%= service_info 'dgo_http' %>
        <tt>dev.gentoo.org</tt> Web Hosting
      </li>
      <li class="list-group-item">
        <%= service_info 'dgo_smtp' %>
